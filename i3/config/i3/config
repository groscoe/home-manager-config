# Drop a terminal with $mod+g, using tdrop
bindsym $mod+g exec --no-startup-id \
  tdrop \
  -ma \
  -r \
  -w 100% -h 95% -y 0 -x 0 \
  alacritty --class "DropDownAlacritty"

# So that the dropdown terminal doesn't flicker on open
